
<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="py-4 text-center">
  <div class = "from-group mx-auto" style="width:200px">
    위도<br/>
    <%=f.text_field :latitude, id: 'lat' ,class: "form-control"%>
  </div>
  <div class = "from-group mx-auto" style="width:200px">
    경도<br/>
    <%=f.text_field :longitude, id: 'lng' ,class: "form-control"%><br/>
  </div>
  
    <% if @p == 1 %>
  
  <div class = "from-group col-md-6 mx-auto">
    장소 종류<br/>
    <%= f.select :area_type, options_for_select([["흡연구역", "흡연구역"],["단속구역", "단속구역"]]), :class => 'genForm_dropBox' %> <br/><br/>
  </div>
  
    <% elsif @p == 2 %>
    
  <div class = "from-group col-md-6 mx-auto">
    장소 종류<br/>
    <%= f.select :area_type, options_for_select([["단속구역", "단속구역"], ["흡연구역", "흡연구역"]]), :class => 'genForm_dropBox' %> <br/><br/>
  </div>
  
  <% else %>

  <% end %>
  
  <div class = "from-group col-md-6 mx-auto">
    장소명<br/>
    <%=f.text_field :area_name,class: "form-control"%><br/>
  </div>
  <div class = "from-group col-md-6 mx-auto">
    장소 설명<br/>
    <%=f.text_area :description,class: "form-control"%><br/>
  </div>
  <div class = "from-group col-md-3 mx-auto">
    사진 업로드<br/>
    <%=f.file_field :image_address, class: "form-control"%><br/>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "등록하기",class: 'btn btn-primary'%>
  </div>
</div>
<% end %>

